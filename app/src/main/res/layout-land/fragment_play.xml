<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_full"
    android:orientation="vertical"
    >
        <LinearLayout
            android:layout_marginTop="5dp"
            style="@style/layout_vertical"
            android:orientation="horizontal"
            android:layout_weight="5"

            >
                <LinearLayout
                    style="@style/layout_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <RelativeLayout
                        style="@style/layout_vertical"
                        android:orientation="horizontal"
                        android:layout_weight="6"
                        android:gravity="center"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                style="@style/layout_horizontal"
                                android:layout_weight="1"/>
                            <LinearLayout
                                style="@style/layout_horizontal"
                                android:layout_weight="2.5"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    style="@style/layout_vertical"
                                    android:layout_weight="1"
                                    android:id="@+id/gestureview"
                                    android:background="@drawable/awaken_off"
                                    android:padding="3dp"/>
                            </LinearLayout>
                            <LinearLayout
                                style="@style/layout_horizontal"
                                android:layout_weight="1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                style="@style/layout_horizontal"
                                android:layout_weight="1"/>
                            <LinearLayout
                                style="@style/layout_horizontal"
                                android:layout_weight="2.5"
                                android:orientation="vertical"
                                >
                                <!--                    <TextView-->
                                <!--                        android:id="@+id/gestureData"-->
                                <!--                        android:layout_marginTop="2dp"-->
                                <!--                        android:layout_marginLeft="2dp"-->
                                <!--                        style="@style/layout_vertical"-->
                                <!--                        android:layout_weight="1"-->
                                <!--                        android:text="@string/DefaultGestrue"-->
                                <!--                        android:textColor="@color/textSize"-->
                                <!--                        android:textSize="15dp"-->
                                <!--                        android:autoSizeTextType="uniform"-->
                                <!--                        android:autoSizeMaxTextSize="10sp"-->
                                <!--                        android:autoSizeMinTextSize="8sp"-->
                                <!--                        android:autoSizeStepGranularity="1sp"-->

                                <!--                        />-->
                                <FrameLayout
                                    style="@style/layout_vertical"
                                    android:id="@+id/gestureOutline"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/layout_horizontal"
                                android:layout_weight="1"/>
                        </LinearLayout>

                    </RelativeLayout>


                    <LinearLayout
                        style="@style/layout_vertical"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            style="@style/layout_horizontal"
                            android:layout_weight="0.2"/>
                        <TextView
                            android:id="@+id/songname"
                            style="@style/layout_horizontal"
                            android:layout_weight="1"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeMinTextSize="20sp"
                            android:autoSizeStepGranularity="1sp"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:text="@string/Song"
                            android:textColor="@color/textSize"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/singer"
                            style="@style/layout_horizontal"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/Singer"
                            android:textColor="@color/textSize"
                            android:textSize="20sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeStepGranularity="1sp"
                            />
                        <LinearLayout
                            style="@style/layout_horizontal"
                            android:layout_weight="0.2"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    style="@style/layout_horizontal"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        style="@style/layout_vertical"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >
                        <TextView
                            style="@style/layout_horizontal"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/SongNumber"
                            android:textColor="@color/textSize"
                            android:textSize="15sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="15sp"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeStepGranularity="1sp"
                            />

                        <TextView
                            style="@style/layout_horizontal"
                            android:layout_weight="2"
                            android:autoSizeMaxTextSize="15sp"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeStepGranularity="1sp"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:text="@string/Song"
                            android:textColor="@color/textSize"
                            android:textSize="15sp" />

                        <TextView
                            style="@style/layout_horizontal"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:textColor="@color/textSize"
                            android:text="@string/Singer"
                            android:gravity="center"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="15sp"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeStepGranularity="1sp"
                            />
                        <TextView
                            style="@style/layout_horizontal"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/SongTime"
                            android:textColor="@color/textSize"
                            android:textSize="15sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="15sp"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeStepGranularity="1sp"
                            />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/songlist"
                        style="@style/layout_vertical"
                        android:layout_weight="6" />
                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/layout_vertical"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:paddingTop="5dp"
                android:id="@+id/songtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="right|top"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                />

            <SeekBar
                android:layout_weight="1.5"
                android:id="@+id/playseekbar"
                style="@android:style/Widget.Holo.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:max="0"
                android:thumb="@drawable/thumb" />

            <TextView
                android:text="00:00"
                android:id="@+id/musictimemax"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="top"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                />
        </LinearLayout>
        <LinearLayout
            style="@style/layout_vertical"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />
            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/forward1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/Forward"
                    android:textColor="@color/textSize"
                    android:textSize="15dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="1sp"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/suspend1"
                    />
                <TextView
                    android:id="@+id/play"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/textSize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="1sp"
                    android:text="@string/Pause"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/back1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/Back"
                    android:textColor="@color/textSize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="1sp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/volumedown"
                    />
                <TextView
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/textSize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="1sp"
                    android:text="@string/VolumeMin"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/play2"
                    />
                <TextView
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/textSize"
                    android:text="@string/Mute"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="1sp"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/volumeup"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/VolumeMax"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="1sp"
                    android:textColor="@color/textSize" />
            </LinearLayout>
            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="0.4" />
        </LinearLayout>

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="0.5" />

        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                style="@style/layout_vertical"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/forward"
                    style="@style/layout_full"
                    android:layout_weight="1"
                    android:src="@drawable/forward" />

                <ImageView
                    android:id="@+id/playx"
                    style="@style/layout_full"
                    android:layout_weight="1"
                    android:src="@drawable/playx" />

                <ImageView
                    android:id="@+id/back"
                    style="@style/layout_full"
                    android:layout_weight="1"
                    android:src="@drawable/back" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <LinearLayout
                android:id="@+id/volumemin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />

                <ImageView
                    style="@style/layout_full"
                    android:layout_weight="1"
                    android:src="@drawable/volumemin"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />

                <ImageView
                    android:id="@+id/labaimage"
                    style="@style/layout_full"
                    android:layout_weight="1"
                    android:src="@drawable/laba1"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/volumemax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />

                <ImageView
                    style="@style/layout_full"
                    android:layout_weight="1"
                    android:src="@drawable/volumemax"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="0.5" />
    </LinearLayout>
</LinearLayout>